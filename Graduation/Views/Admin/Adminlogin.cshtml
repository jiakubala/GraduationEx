@model Graduation.Models.Admin

@{
    ViewData["Title"] = "管理员登录";
}

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
    <title>管理员登录</title>
    <link rel="stylesheet" href="~/css/base.css" />
    <link rel="stylesheet" href="~/css/global.css" />
    <link rel="stylesheet" href="~/css/login-register.css" />
</head>
<body>
    <div class="header wrap1000">
        <a href="index.html"><img src="~/images/logo.png" alt="" /></a>
    </div>
    <div class="main">
        <div class="login-form fr">
            <div class="form-hd">
                <h3>管理员登录</h3>
            </div>
            <div class="form-bd">
                <form asp-action="Adminloginjudge" method="POST">
                    <dl>
                        <dt>用户名</dt>
                        <dd>
                            <input type="text" class="text" asp-for="Id" placeholder="请输入用户名" autofocus />
                        </dd>
                    </dl>
                    <dl>
                        <dt>密&nbsp;&nbsp;&nbsp;&nbsp;码</dt>
                        <dd>
                            <input type="password" class="text" asp-for="Password" placeholder="请输入密码" />
                        </dd>
                    </dl>
                    <dl>
                        <dt>&nbsp;</dt>
                        <dd><input type="submit" class="submit" /></dd>
                    </dl>
                </form>
                <dl>
                    <dt>&nbsp;</dt>
                    <dd> 非管理员请进入用户端 </dd>
                </dl>
                <dl class="other">
                    <dt>&nbsp;</dt>
                    <dd>
                        <a asp-controller="Login" asp-action="Loginin">用户登录</a>
                    </dd>
                </dl>
            </div>
            <div class="form-ft">

            </div>
        </div>

        <div class="login-form-left fl">
            <img src="~/images/left.jpg" alt="" />
        </div>
    </div>

    <div class="footer clear wrap1000">
        <p> <a href="">首页</a> | <a href="">招聘英才</a> | <a href="">广告合作</a> | <a href="">关于LXSH</a> | <a href="">联系我们</a></p>
        <p>Copyright 2018-2080 itcast Inc.,All rights reserved.</p>
    </div>

</body>
</html>


