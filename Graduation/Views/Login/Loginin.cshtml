
@{
    ViewData["Title"] = "Loginin";
}
@model Graduation.Models.User

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
        <title>用户登录</title>
        <link rel="stylesheet" href="~/css/base.css" />
        <link rel="stylesheet" href="~/css/global.css" />
        <link rel="stylesheet" href="~/css/login-register.css" />
</head>
<body>
    <div class="header wrap1000">
            <a href="index.html"><img src="~/images/logo.png" alt="" /></a>
        </div>
        <div class="main">
            <div class="login-form fr">
                <div class="form-hd">
                    <h3>用户登录</h3>
                </div>
                <div class="form-bd">
                    <form asp-action="Loginjudge" method="POST">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <dl>
                            <dt>用户名</dt>
                            <dd>
                                <input type="text" class="text" asp-for="UserId" placeholder="请输入用户名" autofocus />
                                <span asp-validation-for="UserId" class="text-danger"></span>
                            </dd>
                        </dl>
                        <dl>
                            <dt>密&nbsp;&nbsp;&nbsp;&nbsp;码</dt>
                            <dd>
                                <input type="password" class="text" asp-for="Password" placeholder="请输入密码" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </dd>
                        </dl>
                        <dl>
                            <dt>&nbsp;</dt>
                            <dd><input type="submit"class="submit" /> <a href="" class="forget">忘记密码?</a></dd>
                        </dl>
                    </form>
                    <dl>
                        <dt>&nbsp;</dt>
                        <dd> 还不是本站会员？立即 <a href="" class="register">注册</a></dd>
                    </dl>
                    <dl class="other">
                        <dt>&nbsp;</dt>
                        <dd>
                            <p>您可以用合作伙伴账号登录：</p>
                            <a href="" class="qq"></a>
                            <a href="" class="sina"></a>
                        </dd>
                    </dl>
                </div>
                <div class="form-ft">

                </div>
            </div>

            <div class="login-form-left fl">
                <img src="~/images/left.jpg" alt="" />
            </div>
        </div>

        <div class="footer clear wrap1000">
            <p> <a href="">首页</a> | <a href="">招聘英才</a> | <a href="">广告合作</a> | <a href="">关于LXSH</a> | <a href="">联系我们</a></p>
            <p>Copyright 2018-2080 itcast Inc.,All rights reserved.</p>
        </div>

</body>
</html>
